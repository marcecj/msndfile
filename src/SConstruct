# vim:ft=python
Import(["sndfile", "do_debug"])

if do_debug:
    sndfile = sndfile.Clone()
    if sndfile['PLATFORM'] == "win32":
        sndfile['PDB'] = 'msndread.pdb'
    else:
        sndfile.MergeFlags("-g -O0")

utils_obj     = sndfile.SharedObject("utils.c")
msndread      = sndfile.Mex("msndread", ["msndread.c", utils_obj])
msndblockread = sndfile.Mex("msndblockread", ["msndblockread.c", utils_obj])

Return(["msndread", "msndblockread"])
